              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "HWP, HWPX, or PDF file"
                },
                {
                  "key": "include_metadata",
                  "value": "true",
                  "type": "text",
                  "description": "Include file metadata",
                  "disabled": false
                },
                {
                  "key": "include_styles",
                  "value": "false",
                  "type": "text",
                  "description": "Include style information",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/extract/hwp-to-json",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "extract", "hwp-to-json"]
            },
            "description": "Extract file content to JSON format"
          }
        },
        {
          "name": "Extract to Text",
          "request": {
            "method": "POST",
            "header": [],
