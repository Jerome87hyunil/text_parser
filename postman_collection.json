              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/extract/hwp-to-text",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "extract", "hwp-to-text"]
            },
            "description": "Extract file content to plain text"
          }
        },
        {
          "name": "Extract to Markdown",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "HWP, HWPX, or PDF file"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/extract/hwp-to-markdown",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "extract", "hwp-to-markdown"]
            },
            "description": "Extract file content to Markdown format"
          }
        },
        {
          "name": "Extract to JSON (Authenticated)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "HWP, HWPX, or PDF file"
                },
                {
                  "key": "include_metadata",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/extract/auth/hwp-to-json",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "extract", "auth", "hwp-to-json"]
            },
            "description": "Extract file with authentication (higher rate limits)"
          }
        }
      ]
    },
    {
      "name": "Async Processing",
      "item": [
        {
          "name": "Submit Async Job",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('task_id', jsonData.task_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"file\": \"{{file_base64}}\",\n  \"filename\": \"document.hwp\",\n  \"extraction_type\": \"json\",\n  \"options\": {\n    \"include_metadata\": true,\n    \"include_styles\": false\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/async/submit",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "async", "submit"]
            },
            "description": "Submit file for async processing (for large files)"
          }
        },
        {
          "name": "Check Job Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/async/status/{{task_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "async", "status", "{{task_id}}"]
            },
            "description": "Check async job status"
          }
        },
        {
          "name": "Get Job Result",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/async/result/{{task_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "async", "result", "{{task_id}}"]
            },
            "description": "Get async job result when completed"
          }
        }
      ]
    },
