# Application Settings
APP_NAME="HWP to PDF Converter API"
APP_VERSION="1.0.0"
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX="/api/v1"
PROJECT_NAME="HWP API"
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=True

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=[".hwp", ".hwpx"]
UPLOAD_DIR="./storage/uploads"
CONVERTED_DIR="./storage/converted"

# Database Settings (Phase 2+)
DATABASE_URL="sqlite:///./hwp_api.db"
# For PostgreSQL: DATABASE_URL="postgresql+asyncpg://user:password@localhost/hwp_api"

